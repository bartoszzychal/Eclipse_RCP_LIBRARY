<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="com.starterkit.bartoszzychal.library.LibraryApplication">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="%perspective.name"
            class="com.starterkit.bartoszzychal.library.perspectives.Perspective"
            id="Library.perspective">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            class="com.starterkit.bartoszzychal.library.views.BooksListView"
            id="Library.BooksList"
            name="%view.bookslist"
            restorable="true">
      </view>
      <view
            class="com.starterkit.bartoszzychal.library.views.BookDetailsView"
            id="Library.BookDetails"
            name="%view.bookdetails"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="Library.perspective">
         <view
               id="Library.BookDetails"
               minimized="false"
               ratio="0.5"
               relationship="right"
               relative="Library.BooksList">
         </view>
         <view
               id="Library.BooksList"
               minimized="false"
               relationship="left"
               relative="org.eclipse.ui.editorss">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu
               label="%menu.file">
            <command
                  commandId="org.eclipse.ui.file.exit"
                  label="%command.exit">
            </command>
            <command
                  commandId="Library.addNewBook"
                  label="%command.addnewbook"
                  style="push">
            </command>
            <command
                  commandId="Library.update"
                  label="%command.update"
                  style="push">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="toolbar:org.eclipse.ui.main.toolbar">
         <toolbar
               id="Library.toolbar">
            <command
                  commandId="Library.addNewBook"
                  icon="icons/add.jpg"
                  style="push">
            </command>
            <command
                  commandId="Library.update"
                  icon="icons/alt_window_16.gif"
                  style="push">
            </command>
         </toolbar>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="com.starterkit.bartoszzychal.library.handlers.AddBookHandler"
            commandId="Library.addNewBook">
      </handler>
      <handler
            class="com.starterkit.bartoszzychal.library.handlers.UpdateHandler"
            commandId="Library.update">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            id="Library.addNewBook"
            name="%command.addnewbook">
      </command>
      <command
            id="Library.update"
            name="%command.update">
      </command>
   </extension>

</plugin>
